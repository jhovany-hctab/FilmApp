<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment"
    >
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="org.bedu.filmapp.ui.splash_screen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashScreenFragment_to_navigation_auth"
            app:destination="@id/navigation_auth"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <navigation android:id="@+id/navigation_home"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="org.bedu.filmapp.ui.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true">
            <action
                android:id="@+id/action_homeFragment_to_postDetailsFragment"
                app:destination="@id/postDetailsFragment"
                app:enterAnim="@anim/enter_right_to_left"
                app:exitAnim="@anim/exit_left"
                app:popEnterAnim="@anim/enter_left_to_right"
                app:popExitAnim="@anim/exit_right"/>
            <action
                android:id="@+id/action_homeFragment_to_profileUsersFragment"
                app:destination="@id/profileUsersFragment"
                app:enterAnim="@anim/enter_right_to_left"
                app:exitAnim="@anim/exit_left"
                app:popEnterAnim="@anim/enter_left_to_right"
                app:popExitAnim="@anim/exit_right"/>
        </fragment>

        <fragment
            android:id="@+id/postDetailsFragment"
            android:name="org.bedu.filmapp.ui.post_details.PostDetailsFragment"
            android:label="fragment_post_details"
            tools:layout="@layout/fragment_post_details" />

        <fragment
            android:id="@+id/profileUsersFragment"
            android:name="org.bedu.filmapp.ui.profile_users.ProfileUsersFragment"
            android:label="fragment_profile_users"
            tools:layout="@layout/fragment_profile_users" >
            <action
                android:id="@+id/action_profileUsersFragment_to_postDetailsFragment"
                app:destination="@id/postDetailsFragment"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"/>
        </fragment>

    </navigation>

    <navigation android:id="@+id/navigation_profile"
        app:startDestination="@id/profileFragment">
        <fragment
            android:id="@+id/profileFragment"
            android:name="org.bedu.filmapp.ui.profile.ProfileFragment"
            android:label="fragment_profile"
            tools:layout="@layout/fragment_profile"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            >
            <action
                android:id="@+id/action_profileFragment_to_postDetailsFragment"
                app:destination="@id/postDetailsFragment"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"/>
            <action
                android:id="@+id/action_profileFragment_to_splashScreenFragment"
                app:destination="@id/splashScreenFragment"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true"/>
        </fragment>
        <fragment
            android:id="@+id/postDetailsFragment"
            android:name="org.bedu.filmapp.ui.post_details.PostDetailsFragment"
            android:label="fragment_post_details"
            tools:layout="@layout/fragment_post_details" />
    </navigation>

    <navigation android:id="@+id/navigation_auth"
        app:startDestination="@id/authHomeFragment">
        <fragment
            android:id="@+id/authHomeFragment"
            android:name="org.bedu.filmapp.ui.auth_home.AuthHomeFragment"
            android:label="fragment_auth_home"
            tools:layout="@layout/fragment_auth_home">
            <action
                android:id="@+id/action_authHomeFragment_to_authLoginFragment"
                app:destination="@id/authLoginFragment"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out" />
            <action
                android:id="@+id/action_authHomeFragment_to_authSignupFragment"
                app:destination="@id/authSignupFragment"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out" />
        </fragment>
        <fragment
            android:id="@+id/authSignupFragment"
            android:name="org.bedu.filmapp.ui.auth_signup.AuthSignupFragment"
            android:label="fragment_auth_signup"
            tools:layout="@layout/fragment_auth_signup">
            <action
                android:id="@+id/action_authSignupFragment_to_homeFragment"
                app:destination="@id/navigation_home"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/authLoginFragment"
            android:name="org.bedu.filmapp.ui.auth_login.AuthLoginFragment"
            android:label="fragment_auth_login"
            tools:layout="@layout/fragment_auth_login">
            <action
                android:id="@+id/action_authLoginFragment_to_homeFragment"
                app:destination="@id/navigation_home"
                app:enterAnim="@android:anim/fade_in"
                app:exitAnim="@android:anim/fade_out"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>



</navigation>