<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/image_profile_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="360dp"
            >
            <ImageView
                android:id="@+id/image_profile_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/baseline_person_24"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_800"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/likes_ll"
            android:layout_toEndOf="@id/image_profile_cv"
            tools:text="Name"
            />
        <TextView
            android:id="@+id/review_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="8dp"
            android:layout_toStartOf="@id/likes_ll"
            android:layout_toEndOf="@id/image_profile_cv"
            tools:text="review for movie"
            />
        <LinearLayout
            android:id="@+id/likes_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_favorite_24"
                app:tint="@color/red_700" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_700"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="7"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_800"
        android:layout_marginStart="36dp"
        android:layout_marginVertical="8dp"
        />
</LinearLayout>